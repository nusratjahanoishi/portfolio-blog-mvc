@model PortfolioWebsite.Models.Project
@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-responsive mb-4" style="width: 100%; height: 300px; object-fit: cover;" />
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            <h4>Technologies Used</h4>
            <p>@Model.TechnologyUsed</p>
            <p><strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3>Project Info</h3>
                </div>
                <div class="card-body">
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Status:</strong> Completed</p>
                    @Html.ActionLink("← Back to Projects", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
