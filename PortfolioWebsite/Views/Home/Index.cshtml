@{
    ViewBag.Title = "Portfolio & Blog Showcase";
}

<div class="hero-section">
    <div class="container">
        <h1 class="hero-title">Portfolio & Blog Showcase</h1>
        <p class="hero-subtitle">Discover amazing projects, share your work, and connect with fellow developers worldwide.</p>
        <div class="hero-stats mb-4">
            <div class="row text-center">
                <div class="col-md-3">
                    <h3 class="stat-number">500+</h3>
                    <p class="stat-label">Projects Shared</p>
                </div>
                <div class="col-md-3">
                    <h3 class="stat-number">200+</h3>
                    <p class="stat-label">Blog Articles</p>
                </div>
                <div class="col-md-3">
                    <h3 class="stat-number">1000+</h3>
                    <p class="stat-label">Active Developers</p>
                </div>
                <div class="col-md-3">
                    <h3 class="stat-number">50+</h3>
                    <p class="stat-label">Technologies</p>
                </div>
            </div>
        </div>
        <div class="hero-buttons">
            @Html.ActionLink("Browse Projects", "Index", "Projects", null, new { @class = "btn btn-primary btn-lg me-3" })
            @Html.ActionLink("Share Your Project", "Create", "Projects", null, new { @class = "btn btn-success btn-lg" })
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-box text-center">
                <div class="feature-icon">
                    <i class="fas fa-search fa-3x text-primary"></i>
                </div>
                <h3>Explore Innovation</h3>
                <p>Discover cutting-edge projects from developers around the world.</p>
                @Html.ActionLink("Browse Projects", "Index", "Projects", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-box text-center">
                <div class="feature-icon">
                    <i class="fas fa-upload fa-3x text-success"></i>
                </div>
                <h3>Showcase Your Work</h3>
                <p>Share your projects and get feedback from the community.</p>
                @Html.ActionLink("Share Project", "Create", "Projects", null, new { @class = "btn btn-success btn-lg" })
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-box text-center">
                <div class="feature-icon">
                    <i class="fas fa-book-open fa-3x text-info"></i>
                </div>
                <h3>Learn & Grow</h3>
                <p>Access tutorials and insights from experienced developers.</p>
                @Html.ActionLink("Read Blogs", "Index", "Blog", null, new { @class = "btn btn-info" })
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-box text-center">
                <div class="feature-icon">
                    <i class="fas fa-pen-alt fa-3x text-warning"></i>
                </div>
                <h3>Share Knowledge</h3>
                <p>Write tutorials and share your coding experiences.</p>
                @Html.ActionLink("Write Blog", "Create", "Blog", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
</div>