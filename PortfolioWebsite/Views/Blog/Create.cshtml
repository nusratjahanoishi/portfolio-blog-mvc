@model PortfolioWebsite.Models.BlogPost
@{
    ViewBag.Title = "Write a Blog Post";
}

<div class="container">
    <h2 class="text-center mb-5">Write a Blog Post</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    @Html.Label("authorName", "Your Name", new { @class = "form-label" })
                    @Html.TextBox("authorName", "", new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Title, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Category, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Category, new SelectList(new[] { "Web Development", "Programming Tips", "Technology Trends", "Tutorial", "Career Advice", "Other" }), "Select Category", new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Summary, "Brief Summary", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Summary, new { @class = "form-control", rows = 2, required = "required" })
                    @Html.ValidationMessageFor(m => m.Summary, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Content, "Full Content", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 10, required = "required" })
                    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-success btn-lg">Publish Post</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-lg ms-2" })
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Writing Tips</h4>
                    </div>
                    <div class="card-body">
                        <ul>
                            <li>Choose a catchy title</li>
                            <li>Write a compelling summary</li>
                            <li>Use clear, simple language</li>
                            <li>Include examples if relevant</li>
                            <li>Proofread before publishing</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>